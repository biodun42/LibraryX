@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 min-h-screen py-12 px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-center">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full blur-3xl transform translate-x-1/4 -translate-y-1/4"></div>
        <div class="absolute bottom-0 left-0 w-3/4 h-3/4 bg-gradient-to-tr from-primary-600 to-primary-400 rounded-full blur-3xl transform -translate-x-1/4 translate-y-1/4"></div>
    </div>
    
    <!-- Registration Container -->
    <div class="relative w-full max-w-4xl">
        <div class="sm:mx-auto sm:w-full sm:max-w-md mb-8">
            <div class="flex justify-center">
                <a href="/" class="group flex items-center space-x-3">
                    <div class="bg-gradient-to-br from-primary-400 to-primary-600 text-white p-3 rounded-xl shadow-md transition-transform duration-300 group-hover:scale-105">
                        <i class="fas fa-book-reader text-2xl"></i>
                    </div>
                    <span class="text-3xl font-bold text-white transition-colors duration-300 group-hover:text-primary-300">
                        Library<span class="text-primary-300">X</span>
                    </span>
                </a>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white tracking-tight">
                Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-primary-200">
                Join thousands of readers in our digital library
            </p>
        </div>

        <div class="grid sm:grid-cols-1 md:grid-cols-5 gap-8 items-start">
            <!-- Registration Form Section -->
            <div class="md:col-span-3 bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden transform transition-all hover:shadow-2xl">
                <div class="px-6 py-8 sm:px-10">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                        <div asp-validation-summary="ModelOnly" class="text-red-400 font-medium text-sm rounded-lg" role="alert"></div>
                        
                        <!-- Full Name Input -->
                        <div>
                            <label asp-for="Input.FullName" class="block text-sm font-medium text-white">Full Name</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-primary-300"></i>
                                </div>
                                <input asp-for="Input.FullName" autocomplete="name" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="Your Name" />
                            </div>
                            <span asp-validation-for="Input.FullName" class="mt-1 text-sm text-red-400 block"></span>
                        </div>

                        <!-- User Name Input -->
                        <div>
                            <label asp-for="Input.UserName" class="block text-sm font-medium text-white">Username</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-at text-primary-300"></i>
                                </div>
                                <input asp-for="Input.UserName" autocomplete="username" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="username" />
                            </div>
                            <span asp-validation-for="Input.UserName" class="mt-1 text-sm text-red-400 block"></span>
                        </div>
                        
                        <!-- Email Input -->
                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-medium text-white">Email address</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-envelope text-primary-300"></i>
                                </div>
                                <input asp-for="Input.Email" autocomplete="email" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="mt-1 text-sm text-red-400 block"></span>
                        </div>

                        <!-- Password Input -->
                        <div>
                            <label asp-for="Input.Password" class="block text-sm font-medium text-white">Password</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-lock text-primary-300"></i>
                                </div>
                                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="��������" />
                            </div>
                            <span asp-validation-for="Input.Password" class="mt-1 text-sm text-red-400 block"></span>
                            <p class="mt-1 text-xs text-primary-300">
                                Password must be at least 6 characters long with uppercase, lowercase, numbers and symbols
                            </p>
                        </div>

                        <!-- Confirm Password Input -->
                        <div>
                            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-white">Confirm Password</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-check-circle text-primary-300"></i>
                                </div>
                                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="��������" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-sm text-red-400 block"></span>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="terms" name="terms" type="checkbox" required
                                       class="h-4 w-4 text-primary-600 border-primary-700 bg-primary-800/60 rounded focus:ring-primary-500 focus:outline-none" />
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="terms" class="text-primary-200">
                                    I agree to the <a href="#" class="text-primary-300 hover:text-primary-200 font-medium">Terms of Service</a> and <a href="#" class="text-primary-300 hover:text-primary-200 font-medium">Privacy Policy</a>
                                </label>
                            </div>
                        </div>

                        <!-- Register Button -->
                        <div>
                            <button id="registerSubmit" type="submit" 
                                    class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary-500 transition-all shadow-md hover:shadow-lg">
                                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-primary-400 group-hover:text-primary-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                                Create Account
                            </button>
                        </div>

                        <!-- Login Link -->
                        <div class="text-center">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                               class="text-sm text-primary-300 hover:text-primary-200 flex justify-center items-center transition-colors">
                                <i class="fas fa-arrow-left mr-2"></i> Already have an account? Sign in
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Side Panel with Benefits -->
            <div class="md:col-span-2">
                <!-- External Login Section -->
                <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden mb-6">
                    <div class="px-6 py-8 sm:px-10">
                        <h3 class="text-lg font-medium text-white text-center mb-6 flex items-center justify-center">
                            <i class="fas fa-globe mr-2 text-primary-300"></i> Use another service
                        </h3>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="rounded-lg bg-primary-800/50 p-4 text-center">
                                    <p class="text-sm text-primary-200">
                                        No external authentication services configured.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-3">
                                    <div class="grid grid-cols-1 gap-3">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" name="provider" value="@provider.Name" 
                                                    class="flex items-center justify-center w-full px-4 py-3 border border-primary-700 rounded-lg shadow-sm text-sm font-medium text-white bg-primary-800/50 hover:bg-primary-700/60 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary-500 transition-all">
                                                @{
                                                    var iconClass = provider.Name.ToLower() switch
                                                    {
                                                        "google" => "fab fa-google text-red-400",
                                                        "facebook" => "fab fa-facebook-f text-blue-400",
                                                        "twitter" => "fab fa-twitter text-blue-400",
                                                        "microsoft" => "fab fa-microsoft text-blue-400",
                                                        "github" => "fab fa-github text-gray-400",
                                                        _ => "fas fa-external-link-alt text-primary-300"
                                                    };
                                                }
                                                <i class="@iconClass mr-2"></i>
                                                Sign up with @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>

                <!-- Membership Benefits -->
                <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden">
                    <div class="px-6 py-8 sm:px-10">
                        <h3 class="text-lg font-medium text-white text-center mb-6 flex items-center justify-center">
                            <i class="fas fa-star mr-2 text-yellow-300"></i> Membership Benefits
                        </h3>
                        
                        <ul class="space-y-4">
                            <li class="flex items-start">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400 mt-1"></i>
                                </div>
                                <p class="ml-3 text-sm text-primary-200">
                                    <span class="text-white font-medium">Access thousands of books</span> from our digital collection
                                </p>
                            </li>
                            <li class="flex items-start">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400 mt-1"></i>
                                </div>
                                <p class="ml-3 text-sm text-primary-200">
                                    <span class="text-white font-medium">Online reading tools</span> with bookmarks and notes
                                </p>
                            </li>
                            <li class="flex items-start">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400 mt-1"></i>
                                </div>
                                <p class="ml-3 text-sm text-primary-200">
                                    <span class="text-white font-medium">Personalized recommendations</span> based on your interests
                                </p>
                            </li>
                            <li class="flex items-start">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400 mt-1"></i>
                                </div>
                                <p class="ml-3 text-sm text-primary-200">
                                    <span class="text-white font-medium">Digital library card</span> for all services
                                </p>
                            </li>
                            <li class="flex items-start">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check-circle text-green-400 mt-1"></i>
                                </div>
                                <p class="ml-3 text-sm text-primary-200">
                                    <span class="text-white font-medium">Free access to academic journals</span> and research papers
                                </p>
                            </li>
                        </ul>

                        <!-- Decorative Image -->
                        <div class="mt-6 text-center">
                            <div class="inline-block p-1 bg-gradient-to-r from-primary-500 to-primary-600 rounded-lg">
                                <div class="bg-primary-900 p-2 rounded">
                                    <i class="fas fa-book-reader text-4xl text-primary-300"></i>
                                </div>
                            </div>
                            <p class="mt-3 text-sm text-primary-300">Over 50,000 books and growing!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trust Badges -->
        <div class="mt-10 flex flex-wrap justify-center gap-6 items-center">
            <div class="text-primary-200 text-sm font-medium backdrop-blur-sm bg-primary-800/20 px-4 py-2 rounded-full">
                Data protected according to GDPR standards
            </div>
            <div class="flex space-x-4">
                <div class="h-8 w-auto opacity-80">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    </svg>
                </div>
                <div class="h-8 w-auto opacity-80">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                        <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-9.618 5.04A12.02 12.02 0 00.344 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-.334-.015-.666-.044-.996z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
