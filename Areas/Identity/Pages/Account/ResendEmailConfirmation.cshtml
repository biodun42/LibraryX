@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 min-h-screen py-12 px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-center">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full blur-3xl transform translate-x-1/4 -translate-y-1/4"></div>
        <div class="absolute bottom-0 left-0 w-3/4 h-3/4 bg-gradient-to-tr from-primary-600 to-primary-400 rounded-full blur-3xl transform -translate-x-1/4 translate-y-1/4"></div>
    </div>
    

    <!-- Email Confirmation Container -->
    <div class="relative w-full max-w-md">
        <!-- Logo and Title Section -->
        <div class="sm:mx-auto sm:w-full sm:max-w-md mb-8">
            <div class="flex justify-center">
                <a href="/" class="group flex items-center space-x-3">
                    <div class="bg-gradient-to-br from-primary-400 to-primary-600 text-white p-3 rounded-xl shadow-md transition-transform duration-300 group-hover:scale-105">
                        <i class="fas fa-book-reader text-2xl"></i>
                    </div>
                    <span class="text-3xl font-bold text-white transition-colors duration-300 group-hover:text-primary-300">
                        Library<span class="text-primary-300">X</span>
                    </span>
                </a>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white tracking-tight">
                Resend confirmation email
            </h2>
            <p class="mt-2 text-center text-sm text-primary-200">
                Enter your email address to receive a new confirmation link
            </p>
        </div>

        <!-- Form Card -->
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden transform transition-all hover:shadow-2xl">
            <div class="px-6 py-8 sm:px-10">
                <form method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-400 font-medium text-sm rounded-lg" role="alert"></div>
                    
                    <!-- Email Input -->
                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-medium text-white">Email address</label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-primary-300"></i>
                            </div>
                            <input asp-for="Input.Email" autocomplete="email" aria-required="true"
                                   class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                   placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="mt-1 text-sm text-red-400 block"></span>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button type="submit" 
                                class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary-500 transition-all shadow-md hover:shadow-lg">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-primary-400 group-hover:text-primary-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                </svg>
                            </span>
                            Send confirmation email
                        </button>
                    </div>

                    <!-- Back to Login -->
                    <div class="flex items-center justify-center mt-4">
                        <a asp-page="./Login" class="text-sm text-primary-300 hover:text-primary-200 flex items-center transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i> Return to login
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Information Card -->
        <div class="mt-6 bg-white/10 backdrop-blur-lg rounded-xl shadow-lg p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle text-blue-400 mt-0.5"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-primary-200">
                        After confirming your email, you'll have full access to your library account and all its features.
                    </p>
                </div>
            </div>
        </div>

        <!-- Email Support Link -->
        <div class="mt-8 flex justify-center">
            <div class="flex items-center text-sm text-primary-300">
                <span>Need help? Contact </span>
                <a href="mailto:support@libraryx.com" class="ml-1 font-medium text-primary-300 hover:text-primary-200 transition-colors">
                    support@libraryx.com
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
