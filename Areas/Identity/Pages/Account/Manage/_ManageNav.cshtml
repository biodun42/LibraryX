@using LibraryX.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="bg-white/5 backdrop-blur-xl sm:rounded-2xl overflow-hidden shadow-xl border border-white/10 h-full">
    <div class="p-6">
        <!-- User Card Section -->
        <div class="mb-8 bg-gradient-to-br from-primary-800/40 to-primary-600/20 rounded-xl p-4 border border-white/5">
            <div class="flex items-center">
                <div class="relative">
                    <div class="h-14 w-14 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white shadow-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="absolute -bottom-1 -right-1 h-6 w-6 bg-green-500 rounded-full border-2 border-primary-900 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <div class="ml-3">
                    <h3 class="text-white font-medium">Account Menu</h3>
                    <p class="text-xs text-primary-300">Manage your settings</p>
                </div>
            </div>
        </div>

        <nav class="space-y-3">
            <!-- Profile -->
            <a id="profile" asp-page="./Index" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                <div class="@(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                </div>
                <span class="text-base font-medium transition-all">Profile</span>
                @if (ManageNavPages.IndexNavClass(ViewContext) == "active")
                {
                    <div class="ml-auto flex items-center">
                        <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                    </div>
                }
            </a>

            <!-- Email -->
            <a id="email" asp-page="./Email" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                <div class="@(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                </div>
                <span class="text-base font-medium transition-all">Email</span>
                @if (ManageNavPages.EmailNavClass(ViewContext) == "active")
                {
                    <div class="ml-auto flex items-center">
                        <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                    </div>
                }
            </a>

            <!-- Password -->
            <a id="change-password" asp-page="./ChangePassword" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                <div class="@(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                </div>
                <span class="text-base font-medium transition-all">Password</span>
                @if (ManageNavPages.ChangePasswordNavClass(ViewContext) == "active")
                {
                    <div class="ml-auto flex items-center">
                        <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                    </div>
                }
            </a>            <!-- External logins -->
            @if (hasExternalLogins)
            {
                <a id="external-login" asp-page="./ExternalLogins" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                    <div class="@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 2a1 1 0 00-1 1v1a1 1 0 002 0V3a1 1 0 00-1-1zM4 4h3a3 3 0 006 0h3a2 2 0 012 2v9a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2zm2.5 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm2.45 4a2.5 2.5 0 10-4.9 0h4.9zM12 9a1 1 0 100 2h3a1 1 0 100-2h-3zm-1 4a1 1 0 011-1h2a1 1 0 110 2h-2a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <span class="text-base font-medium transition-all">External Logins</span>
                    @if (ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active")
                    {
                        <div class="ml-auto flex items-center">
                            <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                        </div>
                    }
                </a>
            }

            <!-- Two-factor authentication -->
            <a id="two-factor" asp-page="./TwoFactorAuthentication" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                <div class="@(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <span class="text-base font-medium transition-all">Two-factor Authentication</span>
                @if (ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active")
                {
                    <div class="ml-auto flex items-center">
                        <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                    </div>
                }
            </a>

            <!-- Personal data -->
            <a id="personal-data" asp-page="./PersonalData" class="group flex items-center w-full px-4 py-4 @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-gradient-to-r from-primary-500/40 to-primary-600/40 text-white" : "text-primary-100") rounded-xl hover:bg-primary-700/30 transition-all duration-300 border border-transparent @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "border-white/10 shadow-lg" : "hover:border-white/5")">
                <div class="@(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-gradient-to-br from-primary-500 to-primary-400 text-white" : "bg-primary-800/60 text-primary-300") mr-4 flex-shrink-0 h-10 w-10 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M3 12v3c0 1.657 3.134 3 7 3s7-1.343 7-3v-3c0 1.657-3.134 3-7 3s-7-1.343-7-3z" />
                        <path d="M3 7v3c0 1.657 3.134 3 7 3s7-1.343 7-3V7c0 1.657-3.134 3-7 3S3 8.657 3 7z" />
                        <path d="M17 5c0 1.657-3.134 3-7 3S3 6.657 3 5s3.134-3 7-3 7 1.343 7 3z" />
                    </svg>
                </div>
                <span class="text-base font-medium transition-all">Personal Data</span>
                @if (ManageNavPages.PersonalDataNavClass(ViewContext) == "active")
                {
                    <div class="ml-auto flex items-center">
                        <span class="bg-primary-500 text-xs font-medium text-white px-2.5 py-1 rounded-lg shadow">Active</span>
                    </div>
                }
            </a>
            
            <!-- Security Summary Card -->
            <div class="mt-8 bg-gradient-to-br from-primary-800/30 to-primary-700/20 rounded-xl p-4 border border-white/5 shadow-lg">
                <h3 class="text-white text-sm font-medium flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Security Status
                </h3>
                <div class="mt-3 space-y-2">
                    <div class="flex items-center text-xs">
                        <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
                        <span class="text-primary-200">Password protection</span>
                    </div>
                    <div class="flex items-center text-xs">
                        <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
                        <span class="text-primary-200">Email verification</span>
                    </div>
                    <div class="flex items-center text-xs">
                        <div class="w-2 h-2 bg-yellow-400 rounded-full mr-2"></div>
                        <span class="text-primary-200">Two-factor authentication</span>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
