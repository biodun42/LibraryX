@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
        <h2 class="text-2xl font-bold text-white">Personal Data</h2>
        <p class="text-primary-200 text-sm mt-1">Manage your account's personal information and data</p>
    </div>
    
    <div class="mt-4 sm:mt-0">
        <div class="flex items-center bg-blue-900/30 px-4 py-2 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
                <p class="text-xs text-primary-200">Data Policy</p>
                <p class="text-white text-sm font-semibold">GDPR Compliant</p>
            </div>
        </div>
    </div>
</div>

<!-- Personal Data Information Card -->
<div class="bg-white/5 backdrop-blur-sm rounded-xl p-2 sm:p-4 shadow-lg border border-white/10">
    <div class="space-y-8">
        <div>
            <h3 class="text-lg font-medium text-primary-100 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-300" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M3 12v3c0 1.657 3.134 3 7 3s7-1.343 7-3v-3c0 1.657-3.134 3-7 3s-7-1.343-7-3z" />
                    <path d="M3 7v3c0 1.657 3.134 3 7 3s7-1.343 7-3V7c0 1.657-3.134 3-7 3S3 8.657 3 7z" />
                    <path d="M17 5c0 1.657-3.134 3-7 3S3 6.657 3 5s3.134-3 7-3 7 1.343 7 3z" />
                </svg>
                Manage Your Personal Data
            </h3>
            <p class="mt-1 text-sm text-primary-300">
                Your account contains personal data that you have provided to us. This page allows you to download or delete that data.
            </p>
        </div>

        <!-- Data Management Options -->
        <div class="bg-primary-800/30 rounded-lg p-6 border border-primary-700/50">
            <div class="space-y-6">
                <!-- Download Data Section -->
                <div>
                    <h4 class="text-base font-medium text-primary-100 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-300" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                        Download Your Data
                    </h4>
                    <p class="mt-1 text-sm text-primary-300">
                        You can download a copy of all personal data we have stored about your account.
                    </p>
                    <div class="mt-4">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="inline-block">
                            <button class="flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition-colors duration-200" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                                Download Data
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Delete Account Section -->
                <div class="pt-6 border-t border-white/10">
                    <h4 class="text-base font-medium text-red-300 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        Delete Your Account
                    </h4>
                    <p class="mt-1 text-sm text-red-200">
                        <strong>Warning:</strong> Deleting your account will permanently remove all your data, and this action cannot be undone.
                    </p>
                    <div class="mt-4">
                        <a id="delete" asp-page="DeletePersonalData" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 shadow-sm transition-colors duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Delete Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Add confirmation for delete button
        document.addEventListener('DOMContentLoaded', function() {
            const deleteBtn = document.getElementById('delete');
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function(event) {
                    const confirmed = confirm('Are you sure you want to delete your account? This action cannot be undone.');
                    if (!confirmed) {
                        event.preventDefault();
                    }
                });
            }
        });
    </script>
}
