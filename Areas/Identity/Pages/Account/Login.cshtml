@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 min-h-screen py-12 px-2 sm:px-4 lg:px-8 flex flex-col items-center justify-center">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full blur-3xl transform translate-x-1/4 -translate-y-1/4"></div>
        <div class="absolute bottom-0 left-0 w-3/4 h-3/4 bg-gradient-to-tr from-primary-600 to-primary-400 rounded-full blur-3xl transform -translate-x-1/4 translate-y-1/4"></div>
    </div>

    <!-- Login Container -->
    <div class="relative w-full max-w-4xl">
        <div class="sm:mx-auto sm:w-full sm:max-w-md mb-8">
            <div class="flex justify-center">
                <a href="/" class="group flex items-center space-x-3">
                    <div class="bg-gradient-to-br from-primary-400 to-primary-600 text-white p-3 rounded-xl shadow-md transition-transform duration-300 group-hover:scale-105">
                        <i class="fas fa-book-reader text-2xl"></i>
                    </div>
                    <span class="text-3xl font-bold text-white transition-colors duration-300 group-hover:text-primary-300">
                        Library<span class="text-primary-300">X</span>
                    </span>
                </a>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white tracking-tight">
                Welcome back
            </h2>
            <p class="mt-2 text-center text-sm text-primary-200">
                Sign in to access your digital library dashboard
            </p>
        </div>

        <div class="grid sm:grid-cols-1 md:grid-cols-5 gap-8 items-center">
            <!-- Login Form Section -->
            <div class="md:col-span-3 bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden transform transition-all hover:shadow-2xl">
                <div class="px-6 py-8 sm:px-10">
                    <form id="account" method="post" class="space-y-6">
                        <div asp-validation-summary="ModelOnly" class="text-red-400 font-medium text-sm rounded-lg" role="alert"></div>
                          <!-- Email/Username Input -->
                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-medium text-white">Username or Email</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-primary-300"></i>
                                </div>
                                <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="Enter username or email" />
                            </div>
                            <span asp-validation-for="Input.Email" class="mt-1 text-sm text-red-400 block"></span>
                        </div>

                        <!-- Password Input -->
                        <div>
                            <div class="flex items-center justify-between">
                                <label asp-for="Input.Password" class="block text-sm font-medium text-white">Password</label>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-sm font-medium text-primary-300 hover:text-primary-200 transition-colors">
                                    Forgot your password?
                                </a>
                            </div>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-lock text-primary-300"></i>
                                </div>
                                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true"
                                       class="block w-full pl-10 pr-3 py-3 text-primary-100 bg-primary-800/50 border border-primary-700 rounded-lg focus:ring-primary-500 focus:border-primary-500 focus:outline-none placeholder-primary-400"
                                       placeholder="Enter your password" type="password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="mt-1 text-sm text-red-400 block"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="flex items-center">
                            <input asp-for="Input.RememberMe" id="remember-me"
                                   class="h-4 w-4 text-primary-600 border-primary-700 bg-primary-800/60 rounded focus:ring-primary-500 focus:outline-none" />
                            <label asp-for="Input.RememberMe" for="remember-me" class="ml-2 block text-sm text-primary-200">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Login Button -->
                        <div>
                            <button id="login-submit" type="submit" 
                                    class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary-500 transition-all shadow-md hover:shadow-lg">
                                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-primary-400 group-hover:text-primary-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                                Sign in
                            </button>
                        </div>

                        <!-- Register / Resend Email Links -->
                        <div class="flex flex-col space-y-2 sm:flex-row sm:space-y-0 sm:space-x-6 text-center sm:text-left mt-4">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                               class="text-sm text-primary-300 hover:text-primary-200 flex justify-center sm:justify-start items-center transition-colors">
                                <i class="fas fa-user-plus mr-2"></i> Register as a new user
                            </a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                               class="text-sm text-primary-300 hover:text-primary-200 flex justify-center sm:justify-start items-center transition-colors">
                                <i class="fas fa-envelope mr-2"></i> Resend email confirmation
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- External Login Section -->
            <div class="md:col-span-2 bg-white/10 backdrop-blur-lg rounded-2xl shadow-xl overflow-hidden">
                <div class="px-6 py-8 sm:px-10">
                    <h3 class="text-lg font-medium text-white text-center mb-6 flex items-center justify-center">
                        <i class="fas fa-globe mr-2 text-primary-300"></i> Use another service
                    </h3>

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="rounded-lg bg-primary-800/50 p-4 text-center">
                                <p class="text-sm text-primary-200">
                                    No external authentication services configured.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-3">
                                <div class="grid grid-cols-1 gap-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" name="provider" value="@provider.Name" 
                                                class="flex items-center justify-center w-full px-4 py-3 border border-primary-700 rounded-lg shadow-sm text-sm font-medium text-white bg-primary-800/50 hover:bg-primary-700/60 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-primary-500 transition-all">
                                            @{
                                                var iconClass = provider.Name.ToLower() switch
                                                {
                                                    "google" => "fab fa-google text-red-400",
                                                    "facebook" => "fab fa-facebook-f text-blue-400",
                                                    "twitter" => "fab fa-twitter text-blue-400",
                                                    "microsoft" => "fab fa-microsoft text-blue-400",
                                                    "github" => "fab fa-github text-gray-400",
                                                    _ => "fas fa-external-link-alt text-primary-300"
                                                };
                                            }
                                            <i class="@iconClass mr-2"></i>
                                            Continue with @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    }

                    <!-- Mockup Device Illustration -->
                    <div class="mt-8 hidden sm:block">
                        <div class="relative mx-auto w-full max-w-[180px]">
                            <div class="bg-gradient-to-br from-gray-700 to-gray-900 rounded-xl p-1 shadow-lg">
                                <div class="bg-gray-800 rounded-lg overflow-hidden">
                                    <div class="h-4 bg-gray-900 flex items-center justify-center">
                                        <div class="h-1 w-1/4 rounded-full bg-gray-700"></div>
                                    </div>
                                    <div class="p-2">
                                        <div class="h-24 bg-primary-900 rounded flex items-center justify-center">
                                            <div class="bg-primary-600 h-10 w-10 rounded-full flex items-center justify-center">
                                                <i class="fas fa-book-reader text-white text-xs"></i>
                                            </div>
                                        </div>
                                        <div class="mt-2 space-y-1">
                                            <div class="h-2 bg-gray-700 rounded-full w-3/4"></div>
                                            <div class="h-2 bg-gray-700 rounded-full w-1/2"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 text-xs text-center text-primary-300">Access across all your devices</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trust Badges -->
        <div class="mt-10 flex flex-wrap justify-center gap-6 items-center">
            <div class="text-primary-200 text-sm font-medium backdrop-blur-sm bg-primary-800/20 px-4 py-2 rounded-full">
                Secure authentication with 2FA support
            </div>
            <div class="flex space-x-4">
                <div class="h-8 w-auto opacity-80">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                        <path d="M12 22a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm-3.54-4.46a1 1 0 0 1 1.41-1.41L11 15.25V10a1 1 0 0 1 2 0v5.25l1.13-1.12a1 1 0 0 1 1.41 1.41l-2.83 2.83a1 1 0 0 1-1.42 0l-2.83-2.83z"/>
                    </svg>
                </div>
                <div class="h-8 w-auto opacity-80">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                        <path d="M12 22a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm0-9a1 1 0 0 1 1 1v3a1 1 0 0 1-2 0v-3a1 1 0 0 1 1-1zm0-4a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
