@using Microsoft.AspNetCore.Identity
@inject UserManager<LibraryX.Models.ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 overflow-hidden min-h-screen">
    
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full blur-3xl transform translate-x-1/4 -translate-y-1/4"></div>
        <div class="absolute bottom-0 left-0 w-3/4 h-3/4 bg-gradient-to-tr from-primary-600 to-primary-400 rounded-full blur-3xl transform -translate-x-1/4 translate-y-1/4"></div>
    </div>
    
    <!-- Geometric Decorative Elements -->
    <div class="hidden lg:block lg:absolute lg:inset-y-0 lg:h-full lg:w-full">
        <div class="relative h-full text-lg max-w-prose mx-auto">
            <svg class="absolute top-12 left-full transform translate-x-32 opacity-10" width="404" height="384" fill="none" viewBox="0 0 404 384">
                <defs>
                    <pattern id="74b3fd99-0a6f-4271-bef2-e80eeafdf357" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                        <rect x="0" y="0" width="4" height="4" class="text-primary-200" fill="currentColor" />
                    </pattern>
                </defs>
                <rect width="404" height="384" fill="url(#74b3fd99-0a6f-4271-bef2-e80eeafdf357)" />
            </svg>
            <svg class="absolute top-1/2 right-full transform -translate-y-1/2 -translate-x-32 opacity-10" width="404" height="384" fill="none" viewBox="0 0 404 384">
                <defs>
                    <pattern id="f210dbf6-a58d-4871-961e-36d5016a0f49" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                        <rect x="0" y="0" width="4" height="4" class="text-primary-200" fill="currentColor" opacity="0.5" />
                    </pattern>
                </defs>
                <rect width="404" height="384" fill="url(#f210dbf6-a58d-4871-961e-36d5016a0f49)" />
            </svg>
        </div>
    </div>
    
    <div class="relative max-w-9xl mx-auto px-2 sm:px-4 sm:px-6 lg:px-8 py-6 ">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
            <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                <div class="relative z-10 animate-fade-in">
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-primary-100 text-primary-800 mb-6 backdrop-blur-sm bg-opacity-80 shadow-lg">
                        <svg class="mr-1.5 h-2 w-2 text-primary-500" fill="currentColor" viewBox="0 0 8 8">
                            <circle cx="4" cy="4" r="3" />
                        </svg>
                        <span class="animate-pulse">Smart Library Management</span>
                    </span>
                    <h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl lg:leading-none">
                        <span class="block bg-clip-text text-transparent bg-gradient-to-r from-white to-primary-200">Library<span class="text-primary-300">X</span></span>
                        <span class="block text-3xl mt-3 font-medium bg-clip-text text-transparent bg-gradient-to-r from-primary-100 to-primary-300">Your Digital Library Gateway</span>
                    </h1
                    >
                    @if (User.Identity?.IsAuthenticated == true)
                    {                        <!-- Personalized Content for Logged-in Users -->
                        <div class="mt-6 backdrop-blur-md bg-primary-800/30 rounded-2xl p-6 border border-primary-700/50 shadow-lg transform transition hover:scale-[1.02]">
                            <p class="text-lg text-primary-100">
                                @{
                                    string displayName = User.Identity?.Name?.Split('@')?[0] ?? "User";
                                    try
                                    {
                                        var user = await UserManager.GetUserAsync(User);
                                        if (user != null && !string.IsNullOrEmpty(user.FullName))
                                        {
                                            displayName = user.FullName;
                                        }
                                    }
                                    catch
                                    {
                                        // Fallback to using claims if there's an issue with the database
                                        // displayName is already set above
                                    }
                                }
                                <span class="font-semibold">Welcome back, @displayName!</span>
                                <span class="block mt-1">Continue your reading journey where you left off.</span>
                            </p>
                            
                            @if (ViewBag.UserLibraryStats != null)
                            {
                                <div class="mt-4 flex flex-wrap gap-2">
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">@ViewBag.UserLibraryStats.BooksDueSoon</span> books due soon
                                    </div>
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">@ViewBag.UserLibraryStats.ReadingListCount</span> reading list items
                                    </div>
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">@(ViewBag.RecommendationsCount ?? 0)</span> new recommendations
                                    </div>
                                    
                                    @if (ViewBag.UserLibraryStats.HasActiveSubscription)
                                    {
                                        <div class="px-4 py-2 rounded-lg bg-primary-600/50 text-white text-sm flex items-center">
                                            <svg class="h-4 w-4 mr-1 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                            </svg>
                                            <span>@ViewBag.UserLibraryStats.SubscriptionType.ToUpper() subscription active</span>
                                        </div>
                                    }
                                </div>                                @if (ViewBag.MostRecentActivity != null)
                                {
                                    <div class="mt-4 bg-primary-700/30 rounded-lg p-3">
                                        <h3 class="text-sm font-medium text-primary-200 flex items-center">
                                            <svg class="h-4 w-4 mr-1 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                            </svg>
                                            Recent Activity
                                        </h3>
                                        <div class="mt-2 text-sm">
                                            <p class="text-primary-100">
                                                @{
                                                    dynamic activity = ViewBag.MostRecentActivity;
                                                    var activityDate = activity.Date.ToString("MMM dd");
                                                    
                                                    if (activity.Type == "download")
                                                    {
                                                        <span>You downloaded <a href="@Url.Action("BookDetail", "Home", new { id = activity.BookId })" class="text-primary-300 hover:underline">@activity.Title</a> (@activity.Format) on @activityDate</span>
                                                    }
                                                    else
                                                    {
                                                        <span>You saved <a href="@Url.Action("BookDetail", "Home", new { id = activity.BookId })" class="text-primary-300 hover:underline">@activity.Title</a> to your reading list on @activityDate</span>
                                                    }
                                                }
                                            </p>
                                        </div>
                                    </div>
                                }
                                
                                @if (ViewBag.RecommendedBooks != null && ViewBag.RecommendedBooks.Count > 0)
                                {
                                    <div class="mt-4">
                                        <h3 class="text-sm font-medium text-primary-200 flex items-center">
                                            <svg class="h-4 w-4 mr-1 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.462a1 1 0 00.95-.69l1.07-3.292z"></path>
                                            </svg>
                                            Recommended Books
                                        </h3>
                                        <div class="mt-2 flex flex-nowrap overflow-x-auto pb-2 gap-3 no-scrollbar">
                                            @foreach (var book in ViewBag.RecommendedBooks)
                                            {
                                                <a href="@Url.Action("BookDetail", "Home", new { id = book.BookId })" class="flex-shrink-0 group">
                                                    <div class="relative w-16 h-24 bg-primary-700/50 rounded shadow-md overflow-hidden">
                                                        @if (!string.IsNullOrEmpty(book.ThumbnailUrl))
                                                        {
                                                            <img src="@book.ThumbnailUrl" alt="@book.Title" class="w-full h-full object-cover" />
                                                        }
                                                        else
                                                        {
                                                            <div class="w-full h-full flex items-center justify-center text-primary-400 text-xs text-center p-1">
                                                                @book.Title
                                                            </div>
                                                        }
                                                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end justify-center pb-1">
                                                            <span class="text-xs text-white truncate max-w-full px-1">View</span>
                                                        </div>
                                                    </div>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <!-- Fallback if stats aren't available -->
                                <div class="mt-4 flex flex-wrap gap-2">
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">0</span> books due soon
                                    </div>
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">0</span> reading list items
                                    </div>
                                    <div class="px-4 py-2 rounded-lg bg-primary-700/50 text-white text-sm">
                                        <span class="font-bold text-primary-300">0</span> new recommendations
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Content for Non-Authenticated Users -->
                        <p class="mt-6 text-base text-primary-100 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl max-w-lg backdrop-blur-md bg-primary-900/30 rounded-xl p-5 border border-primary-800/50 shadow-lg">
                            Discover, borrow, and manage your reading journey with our cutting-edge digital library platform. Access thousands of books, journals, and resources from anywhere.
                        </p>
                    }
                    
                    <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                        <div class="mt-5 sm:mt-8 flex flex-col sm:flex sm:justify-center lg:justify-start gap-4">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <!-- CTA Buttons for Logged-in Users -->
                                <a href="/Home/Catalog" class="group relative flex items-center justify-center px-8 py-3 overflow-hidden rounded-lg bg-primary-600 text-white shadow-md transition-all hover:bg-primary-700 hover:shadow-lg md:py-4 md:text-base md:px-10">
                                    <span class="relative">Google Books Catalog</span>
                                    <svg class="relative ml-2 h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                                <a href="/Home/OpenLibrary" class="group relative flex items-center justify-center px-8 py-3 overflow-hidden rounded-lg border border-primary-300 text-white backdrop-blur-md hover:bg-primary-700/40 md:py-4 md:text-base md:px-10 transition-all duration-300">
                                    <span class="relative">Open Library Catalog</span>
                                    <svg class="relative ml-2 h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                </a>
                            }
                            else
                            {
                                <!-- CTA Buttons for Non-Authenticated Users -->
                                <a asp-area="Identity" asp-page="/Account/Register" class="group relative flex items-center justify-center px-8 py-3 overflow-hidden rounded-lg bg-primary-600 text-white shadow-md transition-all hover:bg-primary-700 hover:shadow-lg md:py-4 md:text-lg md:px-10">
                                    <span class="absolute -top-10 left-10 h-32 w-32 rounded-full bg-primary-500 blur-xl opacity-60 group-hover:opacity-100 transition-opacity duration-700"></span>
                                    <span class="relative">Start Reading</span>
                                </a>
                                <a href="/Home/Catalog" class="group relative flex items-center justify-center px-8 py-3 overflow-hidden rounded-lg border border-primary-300 text-white backdrop-blur-md hover:bg-primary-700/40 md:py-4 md:text-lg md:px-10 transition-all duration-300">
                                    <span class="relative">Browse Catalog</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="relative h-5 w-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            }
                        </div>
                        
                        <!-- Trust Badges -->
                        <div class="mt-6 flex flex-wrap justify-center lg:justify-start gap-6 items-center">
                            <div class="text-primary-200 text-sm font-medium backdrop-blur-sm bg-primary-800/20 px-4 py-2 rounded-full">Serving 50,000+ students across 200+ schools</div>
                            <div class="flex space-x-4">
                                <div class="h-8 w-auto opacity-80">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                                    </svg>
                                </div>
                                <div class="h-8 w-auto opacity-80">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-auto" viewBox="0 0 24 24" fill="white">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
                <div class="relative mx-auto w-full rounded-lg lg:max-w-md animate-slide-up">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Recently Borrowed Books Card for Authenticated Users -->
                        <div class="relative bg-white/10 backdrop-blur-md rounded-2xl overflow-hidden shadow-2xl border border-primary-700/50 transform transition-all duration-500 hover:scale-[1.02]">
                            <div class="px-6 pt-6 pb-8">
                                <h3 class="text-lg font-semibold text-white mb-3 flex items-center">
                                    <svg class="h-5 w-5 mr-2 text-primary-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 005.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                                    </svg>
                                    Recently Borrowed
                                </h3>
                                <div class="space-y-4">
                                    <!-- Book Item -->
                                    <div class="flex items-center space-x-4 p-3 bg-primary-800/30 rounded-lg">
                                        <div class="flex-shrink-0 h-12 w-9 bg-gradient-to-br from-blue-400 to-blue-600 rounded shadow-md"></div>
                                        <div>
                                            <h4 class="text-white font-medium text-sm">The Design of Everyday Things</h4>
                                            <p class="text-primary-200 text-xs">Due in 7 days</p>
                                        </div>
                                    </div>
                                    <!-- Book Item -->
                                    <div class="flex items-center space-x-4 p-3 bg-primary-800/30 rounded-lg">
                                        <div class="flex-shrink-0 h-12 w-9 bg-gradient-to-br from-green-400 to-green-600 rounded shadow-md"></div>
                                        <div>
                                            <h4 class="text-white font-medium text-sm">Algorithms to Live By</h4>
                                            <p class="text-primary-200 text-xs">Due in 14 days</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-5">
                                    <a href="#all-books" class="inline-flex items-center text-sm font-medium text-primary-300 hover:text-primary-200">
                                        View all borrowed books
                                        <svg class="ml-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                            <div class="px-6 py-3 bg-primary-700/30 flex justify-between items-center">
                                <span class="text-xs text-primary-200">Reading progress: 43%</span>
                                <div class="w-24 h-1.5 bg-primary-800/50 rounded-full overflow-hidden">
                                    <div class="h-full w-5/12 bg-primary-300 rounded-full"></div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Video/Image Card for Non-Authenticated Users -->
                        <a href="#" class="relative block w-full bg-gray-900 rounded-2xl overflow-hidden focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transform transition duration-500 hover:scale-105 shadow-2xl">
                            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-60 z-10"></div>
                            <img class="w-full transition-transform duration-700 hover:scale-110" src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Modern library with books">
                            <div class="absolute inset-0 w-full h-full flex items-center justify-center z-20">
                                <div class="h-16 w-16 rounded-full bg-primary-600 bg-opacity-80 flex items-center justify-center backdrop-blur-sm hover:bg-opacity-100 transition-all duration-300 transform hover:scale-110 shadow-lg">
                                    <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z" />
                                    </svg>
                                </div>
                            </div>
                            <div class="absolute bottom-0 inset-x-0 bg-gradient-to-t from-black to-transparent py-6 px-6 z-20">
                                <p class="text-lg text-white font-medium">Take a virtual library tour</p>
                                <p class="text-sm text-primary-200 mt-1">Explore our state-of-the-art facilities</p>
                            </div>
                        </a>
                    }
                    
                    <!-- Floating Stats Card - Show for everyone -->
                    <div class="absolute -bottom-10 -left-16 bg-white rounded-xl shadow-xl p-4 w-56 transform rotate-3 hidden md:block transition-transform hover:-rotate-1 hover:scale-105 duration-300">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <svg class="h-10 w-10 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">Collection</p>
                                    <p class="text-xs text-gray-500">Available books</p>
                                </div>
                            </div>
                            <span class="text-primary-600 text-lg font-bold">50K+</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Library Notices Section -->
<div class="bg-white py-12">
    <div class="max-w-9xl mx-auto px-2 sm:px-4 lg:px-8">
        <!-- Conditionally show different title based on authentication -->
        <div class="lg:text-center">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <h2 class="text-base text-primary-600 font-semibold tracking-wide uppercase">Your Library Updates</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    Personalized Notices & Information
                </p>
            }
            else
            {
                <h2 class="text-base text-primary-600 font-semibold tracking-wide uppercase">Library Updates</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    Latest News & Notices
                </p>
            }
            <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
                Stay informed about new arrivals, events, and important library announcements.
            </p>
        </div>

        <!-- Conditional content based on authentication -->
        <div class="mt-10">
            <div class="space-y-4">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Personalized notices for logged-in users -->
                    <div class="bg-green-50 rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border-l-4 border-green-500 transform hover:-translate-y-1">
                        <div class="flex items-start">
